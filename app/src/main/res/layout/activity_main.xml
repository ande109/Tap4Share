<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent">

        <TextView
            android:id="@+id/text_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/grey"
            android:text= "Tap4Share" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/grey"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_home"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_text"
            android:text="Home"/>

        <TextView
            android:id="@+id/text_tap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_tap"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_text"
            android:text="TAP!"/>

        <!--<TextView-->
            <!--android:id="@+id/text_shake"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/tab_menu_background"-->
            <!--android:drawablePadding="3dp"-->
            <!--android:drawableTop="@drawable/tab_menu_shake"-->
            <!--android:gravity="center"-->
            <!--android:textColor="@drawable/tab_menu_text"-->
            <!--android:text="Shake"/>-->



    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/grey"
        android:layout_above="@id/tab_menu"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </FrameLayout>

</RelativeLayout>